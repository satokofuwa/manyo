<div class="container">
<h5><%=@label.label %>番ラベルのタスク</h5>
<table class="table">
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>優先順位</th>
    <th>ステータス</th>
    <th>作成者</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.content %></td>
    <td><%= task.expired_at %></td>
    <td><%= task.priority %></td>
    <td><%= task.status %></td>
    <td><%= task.user.name %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to "タスク一覧へ", tasks_path %>
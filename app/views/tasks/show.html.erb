<table>
  <thead>
    <h3> Task一覧</h3>
      <%= link_to 'Task 新規作成', new_task_path %></button>
      <%= link_to 'Task 管理画面', tasks_path %></button>
  </thead>

  <tbody>
  <tr>
      <th>ID</th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th>タスク名</th>
      <td><%= @task.title %></td>
    </tr>
    <tr>
      <th>タスク詳細</th>
      <td><%= @task.content %></td>
    </tr>
  </tbody>
</table>
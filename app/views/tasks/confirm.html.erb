<div class="left-contents col-md-8">
  <h2>確認画面</h2>
</div>
  <%= form_with(model: @task, local: true) do |form| %>
    <%= form.hidden_field :title %>
    <%= form.hidden_field :content %>
    <%= form.hidden_field :expired_at %>
    <%= form.hidden_field :status %>
    <%= form.hidden_field :priority %>
    <div class="left-contents col-8">
      <p><strong>タスク名: <%= @task.title %></strong></p> 
       <div class="left-contents col-2">
         <p><strong>内容: <%= @task.content %></strong></p> 
        </div>
    <p ><strong>終了期限: <%= @task.expired_at %></strong></p> 
    <p ><strong>ステータス: <%= @task.status %></strong></p> 
    <p ><strong>優先度: <%= @task.priority %></strong></p>
    </div>
    <%= form.submit "タスク作成" %>
  <% end %>
    <%= link_to "作成画面に戻る", new_task_path, class: 'btn btn-outline-primary'%>
<br>